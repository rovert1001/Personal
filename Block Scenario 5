import java.util.Scanner;
class Main {
  public static void main(String[] args) {
    
    boolean isBeginning = false;
    boolean isFinished = false;
    

    
    while (true) {
      
      isBeginning = true;
      
      while (isBeginning) {
      System.out.println("");
      System.out.println("Load the block");
      System.out.println("");
      System.out.println("Face the shape side of the block North");
      System.out.println("");
      isBeginning = false;
      }
      for (int i=0; i<3; i++) {
        System.out.println("Move the block North 3 spaces");
      }
      for (int i=0; i<3; i++) {
        System.out.println("Move block North 2 spaces");
        System.out.println("");
        for (int o=0; o<1; o++) {
          System.out.println("Move the block 1 space to the West");
        }
        for (int o=0; o<2; o++) {
          System.out.println("Move the block 1 space to the East");
        }
      }
      break;
    }
    
    
    
    if (isFinished) {
      System.exit(0);
    }
  }
}
